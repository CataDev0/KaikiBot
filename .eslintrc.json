{
    "env": {
        "commonjs": true,
        "es2020": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "no-console": "off",
        "no-constant-condition": "off",
        "indent": [
            "warn",
            "tab",
            {
                "SwitchCase": 1
            }
        ],
        "no-unused-vars": "off",
        "no-empty-pattern": "off",
        "quotes": [
            "warn",
            "double"
        ],
        "linebreak-style": "off",
        "semi": [
            "warn",
            "always"
        ],
        "no-return-await": "warn",
        "no-unneeded-ternary": "warn",
        "object-shorthand": [
            "warn",
            "always"
        ],
        "prefer-const": "warn"
    }
}
