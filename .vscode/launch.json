    "version": "0.2.0",
    "configurations": [
        {
            "args": [],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "name": "DEBUG",
            "outFiles": ["${workspaceRoot}/dist/**/*.js"],
            "preLaunchTask": ["tsc: build - src/tsconfig.json"],
            "program": "${workspaceRoot}/src/index.ts",
            "request": "launch",
            "envFile": "${workspaceFolder}/.env",            
            "runtimeArgs": [
                "--nolazy"
            ],
            "runtimeExecutable": null,
            "sourceMaps": true,
            "stopOnEntry": false,
            "type": "node"
        },
        {
            "name": "DEBUG NODEMON",
            "command": "npm run nodemon",
            "type": "node-terminal"
        },
    ]
}