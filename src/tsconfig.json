{
    "compilerOptions": {
      "strictNullChecks": true, // enable strict null checks as a best practice
      "allowJs": true,
      "module": "commonJS",
      "esModuleInterop": true,
      "target": "ESNext",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "resolveJsonModule": true,
      "rootDir": ".",
      "outDir": "../dist/",
      "baseUrl": ".",
      "paths": {
        "*": ["../node_modules/*"]
      },
      "declaration": false,
      // "emitDecoratorMetadata": true,
      // "experimentalDecorators": true,
      "typeRoots": ["types", "node_modules/@types"],
      "lib": ["ES2020", "ES2019", "ES2018", "es2017", "es2016", "es2015", "dom"]
    },
    "references": [      // this is how we declare a dependency from
      { "path": "../" }  // this project to the one at the root dir`
    ],
    "include": ["./**/*", "./.eslintrc.js", "jest.config.js", "./*", "types", "./Extensions/loglevel.d.ts"],
    "exclude": ["../node_modules/*", "../types/*"]
  }
  